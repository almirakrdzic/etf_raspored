@{
    ViewBag.Title = "BookIndex";
}

  <div class="col-lg-12">
                        <div class="col-lg-8">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                            </div>
                            <!-- /input-group -->
                        </div>                   
  </div>
                    <div class="col-lg-12"><br /></div> 
                    <div class="col-lg-12">

   <div data-ng-repeat ="book in books" class="col-sm-3 col-md-3">
    <div class="thumbnail">
        <a id="{{book.Id}}"  href="#/book/details/{{book.Id}}" class="thumbnail">
<img data-src="holder.js/300x200" alt="..." src="~/Content/img/book.png">
        </a> 
        <h4 style="text-align:center">{{book.Title}}</h4>
        <p style="text-align:center" class="text-muted">
           {{book.Description}}
        </p>
        <p><a href="#" class="btn btn-primary" role="button"><i class="fa fa-download fa-fw"></i></a></p>
     
    </div>
  </div>
 </div>
<div class="col-lg-12">
<pagination  total-items="booksSize" max-size="maxSize" items-per-page="itemsPerPage" data-ng-model="currentPage" class="pagination-sm" boundary-links="true" rotate="true" ></pagination>
 </div>
